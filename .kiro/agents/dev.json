{
  "name": "dev",
  "description": "Agent for @zweer/utils - Monorepo of Node.js CLI utilities",
  "prompt": "file://../prompts/dev.md",
  "resources": ["file://README.md", "file://.kiro/steering/**/*.md"],
  "tools": [
    "read",
    "write",
    "shell",
    "grep",
    "glob",
    "web_search",
    "web_fetch",
    "introspect",
    "thinking",
    "code",
    "@github"
  ],
  "allowedTools": [
    "read",
    "shell",
    "grep",
    "glob",
    "web_search",
    "web_fetch",
    "introspect",
    "thinking",
    "code",
    "@github/*"
  ],
  "toolsSettings": {
    "write": {
      "allowedPaths": [
        ".kiro/**",
        "packages/**",
        ".github/**",
        "README.md",
        "CHANGELOG.md",
        "package.json",
        "package-lock.json",
        "bonvoy.config.ts",
        "vitest.config.ts",
        "tsdown.config.ts",
        "tsconfig.json",
        "biome.json",
        ".editorconfig",
        ".gitignore",
        ".lintstagedrc",
        ".npmpackagejsonlintrc.json",
        ".npmpackagejsonlintignore"
      ]
    },
    "shell": {
      "autoAllowReadonly": true,
      "deniedCommands": [".*git commit.*", ".*git push.*", ".*git tag .*", ".*npm publish.*"]
    }
  },
  "mcpServers": {
    "github": {
      "url": "https://api.githubcopilot.com/mcp/"
    }
  }
}
