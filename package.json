{
  "name": "@zweer/utils",
  "version": "1.0.0",
  "private": true,
  "description": "A monorepo containing a collection of useful Node.js CLI utilities",
  "keywords": [
    "utils",
    "cli",
    "scripts",
    "tools"
  ],
  "homepage": "https://github.com/Zweer/utils#readme",
  "bugs": {
    "url": "https://github.com/Zweer/utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zweer/utils.git"
  },
  "license": "MIT",
  "author": {
    "name": "Zweer",
    "email": "n.olivieriachille@gmail.com"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsdown",
    "postbuild": "npm install",
    "clean": "rimraf --glob packages/**/dist",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "prelint": "npm run build",
    "lint": "concurrently npm:lint:* --prefixColors auto",
    "postlint": "npm run clean",
    "lint:engines": "ls-engines",
    "lint:format": "biome check --write",
    "lint:lockfile": "lockfile-lint",
    "lint:package": "npmPkgJsonLint .",
    "lint:sort_package": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "lint:typecheck": "tsc --noEmit",
    "prepare": "husky",
    "prescripts:dummy": "npm run build",
    "scripts:dummy": "publish-dummy-package",
    "postscripts:dummy": "npm run clean",
    "pretest": "npm run build",
    "test": "vitest run",
    "posttest": "npm run clean",
    "pretest:coverage": "npm run build",
    "test:coverage": "vitest run --coverage",
    "posttest:coverage": "coverage-badge-readme && npm run clean"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@arethetypeswrong/core": "^0.18.2",
    "@biomejs/biome": "^2.3.14",
    "@bonvoy/core": "^0.12.1",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@tsconfig/node24": "^24.0.4",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@zweer/coverage-badge-readme": "^1.2.2",
    "bonvoy": "^0.13.0",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "lockfile-lint": "^5.0.0",
    "ls-engines": "^0.10.0",
    "memfs": "^4.56.10",
    "npm-package-json-lint": "^9.1.0",
    "npm-package-json-lint-config-default": "^8.0.1",
    "publint": "^0.3.17",
    "rimraf": "^6.1.2",
    "sort-package-json": "^3.6.1",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">= 20.5"
  },
  "lockfile-lint": {
    "path": "package-lock.json",
    "type": "npm",
    "validate-https": true,
    "allowed-hosts": [
      "npm"
    ]
  }
}
